<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:orientation="vertical" android:background="@drawable/background_pink">
    <LinearLayout android:id="@+id/linearLayout1" android:background="#0099cc" android:layout_width="match_parent" android:layout_height="50dip" android:gravity="center">
        <TextView android:layout_weight="0" android:textColor="#ffffff" android:layout_height="wrap_content" android:text="Baby Names" android:textSize="22dip" android:id="@+id/textView1" android:layout_width="wrap_content"></TextView>
        <LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="match_parent" android:id="@+id/namesListActivityListView"></LinearLayout>
        <Button android:text="New" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/namesListActivityNewBTN"></Button>
    </LinearLayout>
    <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/babyNamesActivityListview" android:layout_weight="1"></ListView>
    <LinearLayout android:background="#0099cc" android:layout_width="match_parent" android:id="@+id/LinearLayout01" android:gravity="center" android:layout_height="50dip">
        <LinearLayout android:id="@+id/LinearLayout02" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="50dip" android:gravity="center">
            <Button android:background="@drawable/boybtn" android:text="" android:id="@+id/namesListActivityBoySortBTN" android:layout_width="50dip" android:layout_height="50dip" android:gravity="center"></Button>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="50dip" android:gravity="center">
            <Button android:text="All" android:id="@+id/namesListActivityAllSortBTN" android:layout_width="50dip" android:layout_height="50dip" android:gravity="center"></Button>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="match_parent" android:layout_weight="1" android:layout_width="50dip" android:gravity="center">
            <Button android:background="@drawable/girlbtn" android:text="" android:id="@+id/namesListActivityGirlSortBTN" android:layout_width="50dip" android:layout_height="50dip" android:gravity="center"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
