<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

      <LinearLayout
          android:id="@+id/linearLayout1"
          android:layout_width="match_parent"
          android:layout_height="50dip"
          android:background="@color/task_bar"
          android:gravity="center" >

        <TextView android:text="Settings" android:textSize="22dip" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/babyNameViewActivityNameLBL"></TextView>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1"></LinearLayout>
    </LinearLayout>

      <LinearLayout
          android:id="@+id/linearLayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical" >

          <LinearLayout
              android:id="@+id/linearLayout4"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:gravity="center" >

              <LinearLayout
                  android:id="@+id/linearLayout6"
                  android:layout_width="125dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <ImageView
                    android:id="@+id/settingsActivityProfileBTN"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/momprofile"
                    android:scaleType="fitCenter" >
                </ImageView>

                  <TextView
                      android:id="@+id/textView1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/title_profile"
                      android:textColor="#000000" />

              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linearLayout7"
                  android:layout_width="125dip"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <Button
                      android:id="@+id/settingsActivitySaveBTN"
                      android:layout_width="100dip"
                      android:layout_height="100dip"
                      android:background="@drawable/icon_save" >
                  </Button>

                  <TextView
                      android:id="@+id/textView4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Save"
                      android:textColor="#000000" >
                  </TextView>
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:id="@+id/linearLayout5"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="1"
              android:gravity="center" >

              <LinearLayout
                  android:id="@+id/linearLayout8"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <Button
                      android:id="@+id/settingsActivityAboutBTN"
                      android:layout_width="75dip"
                      android:layout_height="75dip"
                      android:background="@drawable/andrios" />

                  <TextView
                      android:id="@+id/TextView01"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="About"
                      android:textColor="#000000" />
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/linearLayout9"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical" >

                  <Button
                      android:id="@+id/settingsActivityBackupBTN"
                      android:layout_width="75dip"
                      android:layout_height="75dip" />

                  <TextView
                      android:id="@+id/TextView02"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/empty"
                      android:textColor="#000000" />

              </LinearLayout>

          </LinearLayout>
      </LinearLayout>
  
</LinearLayout>
