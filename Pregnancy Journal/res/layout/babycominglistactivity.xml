<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/task_bar"
        android:gravity="center" >

        <TextView
            android:id="@+id/titleLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/title_babys_coming"
            android:textColor="#ffffff"
            android:textSize="22dip" >
</TextView>
        <LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="match_parent" android:id="@+id/journalListActivityListView"></LinearLayout>

        <Button
            android:id="@+id/checkListActivityNewBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pencil"
            android:text="" >
</Button>
    </LinearLayout>

    <ListView
        android:id="@+id/checkListActivityListview"
        android:cacheColorHint="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
</ListView>
</LinearLayout>
